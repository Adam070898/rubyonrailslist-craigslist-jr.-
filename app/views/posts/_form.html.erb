<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h3><%= f.text_field :name, placeholder: "Title"%></h3>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description,
    placeholder: "Drag bottom right corner to resize "%>
  </div>
  <div class="field">
    <%= f.label :contact %><br>
    <%= f.text_field :contact %>
  </div>
  <div class="field">
    <%= f.label :comission %><br>
    $<%= f.number_field :comission, :class => 'text_field', :step => 'any' %>
    <br></br>
  </div>
  <div class="field">
    <%= f.label :category_id %>
    <%= collection_select(:post, :category_id, Category.all, :id, :name, prompt: true) %>
  </div>
  <div class="actions">
    <br><%= f.submit %>
  </div>
<% end %>
